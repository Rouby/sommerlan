{
  "name": "sommerlan-app",
  "private": true,
  "description": "",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"yarn workspace @sommerlan-app/server dev\" \"yarn workspace @sommerlan-app/client dev\"",
    "build": "yarn workspaces foreach -pti run build",
    "lint": "echo \"No linting configured\"",
    "test": "yarn workspaces foreach -p run test",
    "typecheck": "yarn workspaces foreach -p run typecheck",
    "integrate": "concurrently --success last --kill-others \"yarn workspace @sommerlan-app/client start\" \"FAKE_API=true PORT=3022 yarn workspace @sommerlan-app/server start\" \"wait-on -t 30000 http://localhost:4173/ http://localhost:3022/health && yarn workspaces foreach -t run integrate\""
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {},
  "devDependencies": {
    "@types/esprima": "^4",
    "concurrently": "^8.2.0",
    "esprima": "^4.0.1",
    "graphql": "^16.8.0",
    "graphql-config": "^5.0.2",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "wait-on": "^7.0.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@3.6.1"
}
